                {{#if messages.success}}
                <div class="alert alert-succ">
                    <p id="successMessage">{{messages.success}}</p>

                </div>
                {{/if}}

                {{#if messages.error}}
                <div id="successMessage" class="alert alert-error">
                    <p id="successMessage"> {{messages.error}}</p>
                    <script
                        type="text/javascript">window.setTimeout("document.getElementById('successMessage').style.display='none';", 3000); </script>
                </div>

                {{/if}}



